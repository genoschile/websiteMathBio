---
import PageHeader from "@components/layout/pageHeader.astro";
import Layout from "@/layouts/Layout.astro";
import ImageBox from "./components/ImageBox.astro";

const images = [
  {
    src: "../../components/columns/columnsGenshin/assets/20.png",
    alt: "Imagen 1",
  },
  {
    src: "../../components/columns/columnsGenshin/assets/20.png",
    alt: "Imagen 2",
  },
  {
    src: "../../components/columns/columnsGenshin/assets/20.png",
    alt: "Imagen 3",
  },
  {
    src: "../../components/columns/columnsGenshin/assets/20.png",
    alt: "Imagen 4",
  },
  {
    src: "../../components/columns/columnsGenshin/assets/20.png",
    alt: "Imagen 5",
  },
  {
    src: "../../components/columns/columnsGenshin/assets/20.png",
    alt: "Imagen 6",
  },
  {
    src: "../../components/columns/columnsGenshin/assets/20.png",
    alt: "Imagen 7",
  },
  {
    src: "../../components/columns/columnsGenshin/assets/20.png",
    alt: "Imagen 8",
  },
  {
    src: "../../components/columns/columnsGenshin/assets/20.png",
    alt: "Imagen 9",
  },
];

const profileNames = [
  { name: "The squad", isDefault: true },
  { name: "Liam" },
  { name: "Olivia" },
  { name: "Noah" },
  { name: "Emma" },
  { name: "Oliver" },
  { name: "Ava" },
  { name: "Elijah" },
  { name: "Sophia" },
  { name: "William" },
];
---

<Layout title="Collaborations">
  <PageHeader
    title="Collaborations"
    description="Explore our collaborations with other research groups and institutions."
  />

  <section
    class="p-4 rounded-md max-w-full w-full h-full object-cover team relative flex flex-col-reverse lg:flex-col justify-center items-center gap-10 overflow-hidden"
  >
    <div class="profile-images inline-flex justify-center items-center w-max">
      {images.map((image) => <ImageBox src={image.src} alt={image.alt} />)}
    </div>

    <div class="profile-names">
      {
        profileNames.map(({ name, isDefault }) => (
          <div class={`name${isDefault ? " default" : ""}`}>
            <h1>{name}</h1>
          </div>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  .profile-names {
    width: 100%;
    height: 20rem;
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
    overflow: hidden;
  }

  .name h1 {
    position: absolute;
    width: 100%;
    text-align: center;
    text-transform: uppercase;
    font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
    font-size: 20rem;
    font-weight: 900;

    letter-spacing: -0.5rem;
    line-height: 1;
    color: red;
    user-select: none;

    transform: translateY(100%);

    &.default h1 {
      color: white;
      transform: translateY(-100%);
    }

    h1 .letter {
      position: relative;
      transform: translateY(0%);
      will-change: transform;
    }
  }

  @media (max-width: 900px) {
    .profile-images {
      flex-wrap: wrap;
      max-width: 90%;
      justify-content: center;
    }

    .img {
      width: 50px;
      height: 50px;
      padding: 2px;
    }

    h1 {
      font-size: 4rem;
      letter-spacing: 0;
    }

    .profile-names {
      height: 4rem;
    }
  }
</style>

