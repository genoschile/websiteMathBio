---
const { className = "", children } = Astro.props;
---

<div class={`relative inline-block w-full rounded-md border border-input bg-background text-sm ${className}`}>
  <select
    disabled
    class="w-full cursor-default rounded-md bg-transparent px-3 py-2 appearance-none outline-none"
  >
    {children}
  </select>
  <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
    <svg class="h-4 w-4 opacity-50" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </div>
</div>
