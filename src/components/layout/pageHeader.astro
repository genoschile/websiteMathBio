---
// Props tipadas en Astro
interface Props {
  title: string;
  description?: string;
  icon?: any;
}

const { title, description, icon: Icon } = Astro.props;
---

<div class="mb-8 pb-4 border-b border-border">
  <div class="flex items-center gap-3">
    {Icon && <Icon class="h-8 w-8 text-primary" />}
    <h1 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
      {title}
    </h1>
  </div>
  {
    description && (
      <p class="mt-2 text-lg text-muted-foreground">{description}</p>
    )
  }
</div>
