---

<section class="announcement-bar animate-fade-in">
  {currentText}
</section>

<style>
  .announcement-bar {
    padding: 1rem 2rem;
    font-size: 1.1rem;
    text-align: center;
    font-weight: 700;
    color: white;
    background: linear-gradient(90deg, #1e3a8a, #9333ea);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    border-radius: 0 0 0.5rem 0.5rem;
    opacity: 0;
    transform: translateY(-10px);
    animation: fade-in 0.8s ease forwards;
  }

  @keyframes fade-in {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 640px) {
    .announcement-bar {
      font-size: 1rem;
      padding: 0.75rem 1rem;
    }
  }
  .announcement-bar.hidden {
    display: none;
  }
</style>

<script is:inline>
  const bar = document.getElementById("welcomeBar");

  if (!sessionStorage.getItem("seenWelcome")) {
    bar.classList.remove("hidden");
    sessionStorage.setItem("seenWelcome", "true");
  }
</script>
