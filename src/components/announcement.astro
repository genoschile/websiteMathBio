// Component or page in Astro
const currentText = "Â¡Bienvenido a MathBio-Lab!";
---

<section
  id="welcomeBar"
  class="announcement-bar hidden px-8 py-4 text-white text-center font-bold text-lg bg-gradient-to-r from-blue-800 to-purple-600 shadow-md rounded-b-md sm:px-4 sm:py-3 sm:text-base"
>
  {currentText}
</section>

<style>
  .announcement-bar {
    opacity: 0;
    transform: translateY(-10px);
    animation: fade-in 0.8s ease forwards;
  }

  @keyframes fade-in {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script is:inline>
  window.addEventListener("astro:page-load", () => {
    const bar = document.getElementById("welcomeBar");

    if (!sessionStorage.getItem("seenWelcome") && bar) {
      bar.classList.remove("hidden");
      sessionStorage.setItem("seenWelcome", "true");
    }
  });
</script>
